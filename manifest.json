{
  "manifest_version": 2,
  "name": "Tab Stats Analyzer",
  "version": "1.0",
  "description": "Analyze your Firefox tabs and get statistics about open domains",

  "permissions": [
    "tabs",
    "activeTab"
  ],

  "browser_action": {
    "default_title": "Tab Stats",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },

  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}